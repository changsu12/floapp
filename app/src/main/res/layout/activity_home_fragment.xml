<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

       <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pannel_vp"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/service_start_button"
            android:layout_width="85dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="start"
            />
        <Button
            android:id="@+id/service_end_button"
            android:layout_width="85dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="end"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/home_pannel_indicator"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal|bottom"
            app:ci_drawable="@drawable/tabcircle"
            app:ci_drawable_unselected="@drawable/ic_bottom_look_select"
            app:ci_height="8dp"
            app:ci_margin="8dp"
            app:ci_width="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp" />

        <TextView
            android:id="@+id/home_pannel_music_list_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp"
            app:layout_constraintStart_toStartOf="@id/home_pannel_vp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/home_pannel_music_list_rightbuttom"
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/home_pannel_music_list_title_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_music_list_title_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_music_list_title_iv"
            />
        <TextView
            android:id="@+id/home_pannel_global_totaltitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textColor="#673AB7"
            app:layout_constraintTop_toTopOf="@id/home_pannel_music_list_title_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_music_list_title_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_music_list_title_iv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/home_pannel_korea_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_global_totaltitle"
            app:layout_constraintTop_toTopOf="@id/home_pannel_global_totaltitle"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_global_totaltitle"/>
        <TextView
            android:id="@+id/home_pannel_global_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_korea_title"
            app:layout_constraintTop_toTopOf="@id/home_pannel_korea_title"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_korea_title"/>

